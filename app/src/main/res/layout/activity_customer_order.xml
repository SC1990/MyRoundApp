<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivities.CustomerOrderActivity">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">



        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/toolbar_layout"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/Theme.AppCompat.Light.DarkActionBar"

            />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <TextView

        android:id="@+id/rname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:text="Thank you for your Order!                 Here is a summary:"/>

    <TextView
        android:id="@+id/time_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="199dp"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <ImageView

        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/order"
        android:layout_alignParentStart="true"
        android:layout_marginStart="190dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/company_logo" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="340dp"
        android:text="Pedro's Beers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_btn"
        android:layout_below="@+id/rel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="124dp"
        android:visibility="invisible">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/order_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="489dp"
        android:text="Total:"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/order_total2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="489dp"
        android:layout_marginLeft="280dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
    android:id="@+id/delivery_fee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="459dp"
    android:text="Delivery fee:"
    android:textColor="@android:color/black"
    android:textSize="20dp" />

    <TextView
        android:id="@+id/delivery_fee2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="459dp"
        android:layout_marginLeft="280dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/discount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="390dp"
        android:text="Discount:"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/discount2"
        android:layout_marginLeft="280dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="390dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="420dp"
        android:text="Subtotal:"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subtotal2"
        android:layout_marginLeft="280dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="420dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <Button
        android:id="@+id/home_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back to home"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/toolbar_layout"/>

</RelativeLayout>