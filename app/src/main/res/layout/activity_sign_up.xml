<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustSignUp">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:background="@drawable/button_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="169dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="@string/email3"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/userEmail"
        android:layout_alignRight="@+id/userEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="@string/password3"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/userEmail"
        app:layout_constraintTop_toBottomOf="@+id/userEmail" />

    <EditText
        android:id="@+id/verifyPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/userEmail"
        android:layout_alignRight="@+id/userEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="@string/confirm_password3"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/userPassword"
        app:layout_constraintTop_toBottomOf="@+id/userPassword" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/userEmail"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="162dp"
        android:background="@drawable/button_border"
        android:onClick="onSignUpBtnClick"
        android:text="@string/sign_up3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logInLinkBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignRight="@+id/userEmail"
        android:layout_marginRight="50dp" />

    <Button

        android:id="@+id/logInLinkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginBottom="99dp"
        android:background="@drawable/button_border"
        android:onClick="onLogInLinkBtnClick"
        android:text="@string/log_in3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/verifyPassword"
        app:layout_constraintBottom_toTopOf="@+id/signUpBtn" />


</RelativeLayout>