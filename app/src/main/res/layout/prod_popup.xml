<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-5dp"
        android:text="Goose IPA 355ml"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/x_butt"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-35dp"
        android:background="@color/colorAccent"
        android:src="@drawable/x_button" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/star_filled"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="-31dp"
        android:layout_marginLeft="54dp"
        android:src="@drawable/star_filled" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="-31dp"
        android:layout_marginLeft="84dp"
        android:src="@drawable/star_filled" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="-31dp"
        android:layout_marginLeft="114dp"
        android:src="@drawable/star_filled" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="-31dp"
        android:layout_marginLeft="144dp"
        android:src="@drawable/empty_star" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:src="@drawable/bbottle"
        android:layout_marginBottom="-160dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_marginLeft="130dp"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:text="The pour is hazy and amber in colour with a small white head. Aromas of floral and grass hops with light malts. The taste is mildly bitter. Medium body and soft carbonation."/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    Availabilty:" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     In stock"
        android:layout_toRightOf="@+id/textView9"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    4 x 355ml - â‚¬10.00"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="-21dp">


        <Button
            android:id="@+id/decrementQuantity"
            android:background="@drawable/button_border2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="32dp"
            android:text="-"
            android:textStyle="bold" />

        <EditText
            android:layout_width="27dp"
            android:layout_height="34dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/edittext_border"
            android:text="  1" />


        <Button
            android:id="@+id/incrementQuantity"
            android:background="@drawable/button_border2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="173dp"
            android:text="+" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="338dp"
            android:background="@drawable/button_border"
            android:text="Add"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>