<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:src="@drawable/bbottle"
        android:layout_marginBottom="-160dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginLeft="170dp"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:text="The pour is hazy and amber in colour with a small white head. Aromas of floral and grass hops with light malts. The taste is mildly bitter. Medium body and soft carbonation."/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    Availabilty:" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     In stock"
        android:layout_toRightOf="@+id/textView9"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    4 x 355ml - â‚¬10.00"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="-21dp">


        <Button
            android:id="@+id/customDialogCancel"
            android:background="@drawable/button_border2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="32dp"
            android:text="-"
            android:textStyle="bold" />

        <EditText
            android:layout_width="27dp"
            android:layout_height="34dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/edittext_border"
            android:text="  1" />


        <Button
            android:id="@+id/customDialogOk"
            android:background="@drawable/button_border2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="173dp"
            android:text="+" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="338dp"
            android:background="@drawable/button_border"
            android:text="Add"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>