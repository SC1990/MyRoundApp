<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MyBeersActivities.BeerLeaderboardActivity"
    android:id="@+id/ll"
    >


<androidx.appcompat.widget.Toolbar
    app:titleTextAppearance="@style/TitleText"
    app:titleTextColor="@color/black"
    android:id="@+id/t"
    app:title="Top 10 Beers (as rated by users)"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_layout">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/medal"
        />


</androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"/>

    <TextView

        android:layout_marginTop="-29dp"

        android:layout_marginLeft="-30dp"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:text="     Click beer for more info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/beer_table"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
        <TableRow android:background="@color/colorPrimary" android:padding="10dp">
            <TextView
                android:textSize="18dp"
                android:layout_marginLeft="-2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/takeaway_sans_bold"
                />
            <TextView
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Style"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/takeaway_sans_bold"
                />
            <TextView
                android:textSize="18dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating"
                android:textColor="@color/black"
                android:fontFamily="@font/takeaway_sans_bold"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>

</LinearLayout>