<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MyRoundHome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/toolbar_layout"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/Theme.AppCompat.Light.DarkActionBar"

            />



        <EditText
            android:id="@+id/editText"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="@string/e_g_walkinstown"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="329dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="171dp"
            android:text="@string/find_beer_in"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="285dp" />

        <Button
            android:id="@+id/findBeerBtn"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="-179dp"
            android:layout_marginBottom="247dp"
            android:background="@drawable/button_states"
            android:gravity="center"
            android:onClick="onFindBeerClick"
            android:text="@string/find_beer"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="400dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="277dp"
            android:layout_height="85dp"
            android:layout_alignStart="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="66dp"
            app:srcCompat="@drawable/logo"
            android:layout_alignLeft="@+id/editText"
            android:contentDescription="@string/logo" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="198dp"
            android:text="@string/i_am_over_18"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginBottom="84dp"
            android:text="@string/please_drink_responsibly"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginBottom="32dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/da" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="#8c000000"
        app:itemTextColor="#E6000000"
    />





