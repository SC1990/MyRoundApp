<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RetailerActivities.MaintainProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_edit"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/img_edit"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/price_edit"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name_edit"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/desc_edit"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/price_edit"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <Button
            android:id="@+id/save_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@drawable/toolbar_layout"
            android:layout_below="@+id/desc_edit"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/remove_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:background="@drawable/toolbar_layout"
            android:layout_below="@+id/save_changes_btn"
            android:layout_margin="10dp"
            android:textStyle="bold"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>